{
  "name": "cyberk-flow",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "hono": "^4.8.2",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "ai": "^6.0.3",
      "@orpc/tanstack-query": "^1.12.2",
      "@orpc/client": "^1.12.2",
      "@ai-sdk/react": "^3.0.3",
      "@better-auth/expo": "^1.4.9",
      "drizzle-orm": "^0.45.1",
      "@types/pg": "^8.16.0"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @cyberk-flow/db db:push",
    "db:studio": "turbo -F @cyberk-flow/db db:studio",
    "db:generate": "turbo -F @cyberk-flow/db db:generate",
    "db:migrate": "turbo -F @cyberk-flow/db db:migrate",
    "db:start": "turbo -F @cyberk-flow/db db:start",
    "db:watch": "turbo -F @cyberk-flow/db db:watch",
    "db:stop": "turbo -F @cyberk-flow/db db:stop",
    "db:down": "turbo -F @cyberk-flow/db db:down",
    "check": "biome check --write .",
    "e2e:cache": "dotenv -e .env.e2e.local -- synpress e2e/wallet-setup --headless",
    "e2e:cache:force": "dotenv -e .env.e2e.local -- synpress e2e/wallet-setup --headless --force",
    "e2e:test": "dotenv -e .env.e2e.local -- playwright test",
    "e2e:test:siwe": "dotenv -e .env.e2e.local -- playwright test e2e/specs/siwe-sign-in.spec.ts",
    "cf": "bun run .agents/skills/cyberk-flow/scripts/cf.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@cyberk-flow/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@cyberk-flow/config": "workspace:*",
    "@playwright/test": "1.48.2",
    "@synthetixio/synpress": "4.0.6",
    "@types/bun": "catalog:",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write"
    ]
  },
  "packageManager": "bun@1.3.6"
}
